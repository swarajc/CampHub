<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">CampHub</p>
      <div class="list-group">
        <li class="list-group-item"><strong>Location -</strong>  <%=campground.location%></li>
        <li class="list-group-item">
          <strong>Max capacity - </strong><%=campground.maxCapacity%> persons
        </li>
        <li class="list-group-item"><strong>Area - </strong><%=campground.area%> sq m</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>" />
        <div class="caption-full">
          <h4 class="pull-right">$ <%=campground.price%> /night</h4>
          <h4><a><%=campground.name%></a></h4>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted By <%= campground.author.username %></em>
          </p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
          <a
            class="btn btn-xs btn-warning"
            href="/campgrounds/<%= campground._id %>/edit"
            >Edit</a
          >
          <form
            id="delete-form"
            action="/campgrounds/<%= campground._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-xs btn-danger">Delete</button>
          </form>
          <% }%>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
